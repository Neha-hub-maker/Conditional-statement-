#include <stdio.h>

int main()
{
    float a, b, c;
    printf("Give the sides: ");
    scanf("%f %f %f", &a, &b, &c);

    if ((a + b > c) && (b + c > a) && (c + a > b)) {
        if ((a == b) && (b == c))
            printf("The triangle is equilateral");
        else if ((a == b) || (b == c) || (c == a))
            printf("The triangle is isosceles");
        else
            printf("The triangle is scalene");
    }
    else {
        printf("The triangle is not valid");
    }

    return 0;
}
